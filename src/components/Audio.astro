---
interface Props {
  source: string;
  class?: string;
  controls?: boolean;
  autoplay?: boolean;
  loop?: boolean;
  muted?: boolean;
}

const { source, class: className = "", controls = true, autoplay = false, loop = false, muted = false } = Astro.props;
---

<div class="w-full flex justify-center">
  <audio
    class={className}
    controls={controls}
    autoplay={autoplay}
    loop={loop}
    muted={muted}
  >
    <source src={source} type="audio/wav" />
    Your browser does not support the audio element.
  </audio>
</div>